{include file="header.html"}
<script>
$(document).ready(function(){
	$("#check").click(function(){
		res = confirm("确定要通过");
		if(!res)
			return false;
		$("#user_form").submit();
	});
});
</script>
<div id="rightTop">
  <p>审核</p>
  
</div>
<div class="info">
  <form method="post" enctype="multipart/form-data" id="user_form">
    <table class="infoTable">
      <tr>
        <th class="paddingT15"> 姓名:</th>
        <td class="paddingT15 wordSpacing5">{$card.name}</td>
      </tr>
      <tr>
        <th class="paddingT15"> 身份证号码:</th>
        <td class="paddingT15 wordSpacing5">{$card.no} </td>
      </tr>
      <tr>
        <th class="paddingT15"> 正面:</th>
        <td class="paddingT15 wordSpacing5"><img style="width:600px" src="/{$card.front}"></td>
      </tr>
      <tr>
        <th class="paddingT15"> 背面:</th>
        <td class="paddingT15 wordSpacing5"><img style="width:600px" src="/{$card.back}"></td>
      </tr>
      <tr>
		<input type="hidden" name="id" value="{$card.id}">
        <td colspan="2"><input id="check" type="button" value="通过"></td>
      </tr>
      
    </table>
  </form>
</div>
{include file="footer.html"}